---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from "@images/post-05.png";
---

<MainLayout title="Imagenes">
  <h1>Imagenes</h1>
  <img src="/assets/images/post-05.png" width="250" height="250" />

  <Image src={post05Img} width="250" height="250" alt="Imagen del post" />
  <Image
    src={post05Img}
    style={{
      width: "250px",
      height: "250px",
    }}
    width="500"
    height="500"
    alt="Imagen del post"
  />

  <h1>Quality Low</h1>
  <Image
    src={post05Img}
    quality="low"
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <h1>Quality High</h1>
  <Image
    src={post05Img}
    quality="high"
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <h1>Formatos</h1>
  <Image
    src={post05Img}
    format="jpg"
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <h1>Picture</h1>
  <!-- widths={[240, 540, 720, post05Img.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`} 
    densities={[1.5, 2]}
    width={post05Img.width / 2}-->
  <Picture src={post05Img} formats={["webp", "jpg"]} alt="Imagen del post" />

  <div
    style={{
      height: "3000px",
    }}
  >
  </div>

  <img loading="lazy" src="/assets/images/post-05.png" />
</MainLayout>
<style>
  h1 {
    @apply text-5xl text-white mt-10;
  }
</style>
